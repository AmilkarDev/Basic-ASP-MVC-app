@using (Html.BeginForm("Index", "Student", FormMethod.Get, new { @class = "Search-form" }))
{
    <div class="form-group">
        <div class="col-md-offset-2 ">
                
                <div>
               @Html.RadioButton("option", "Name") <text>Name</text> 
               @Html.RadioButton("option", "City") <text> City </text>
               @Html.RadioButton("option", "Address")<text>Address</text>
               @Html.TextBox("search") 
               <input type="submit" value="  Search  " id="btnSubmit" class="btn btn-primary"/>
               @Html.ActionLink("show all", "Index", null, new { @class = "btn btn-primary btn-large" })
